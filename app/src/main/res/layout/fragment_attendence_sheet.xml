<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorclassroom">

    <TextView
        android:id="@+id/tv_attencence_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="97dp"
        android:text="Attendence Sheet"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attendence_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_attencence_sheet"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_above="@+id/bt_submit"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round_bg"
        android:text="Submit"
        android:layout_margin="16dp"/>
</RelativeLayout>